cdef inline h_istring_t convert_py_to_ish(value):
    cdef string msg
    
    if isinstance(value, bytes):
        msg = value 
    elif isinstance(value, str):
        msg = value.encode("utf-8")
    else:
        raise TypeError(
            "Base string must be in instance of `str` or `bytes`, got {}".format(type(value))
        )

    return intern(msg)
